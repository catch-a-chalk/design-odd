extends layout/app

block page
  h1.visually-hidden Страница WIJI
  include chunk/header
  main
    section.template#template-wiji
      .template__grid
        .template__main-content
          .template__heading
            .template__heading-container
              h2 клиент
              p WIJI
          .template__categories
            p брендинг
            p айдентика
            p иллюстрация
            p упаковка
          .template__services
            h3.template__h3 услуги
            ul.template__list
              li Брендинг
              li Платформа бренда
              li Иллюстрация
              li Дизайн упаковки
              li Промо материалы
        .template__pic
          img(src="img/t-wiji-left@1x.jpg", alt="Банки WIJI вид слева")
      .template__grid
        .template__main-content
          .template__subheading
            h3.template__h3 о проекте
            p.template__text бренд строится на&nbsp;технологичности, универсальности и&nbsp;экологичности. Масло CBD является естественной альтернативой синтетическим лекарствам и&nbsp;добавкам. Такая позиция помогает привлечь внимание к&nbsp;преимуществам масла CBD в&nbsp;сравнении с&nbsp;другими продуктами на&nbsp;рынке. Особенность подачи бренда WIJI&nbsp;&mdash; дизайн со&nbsp;ставкой на&nbsp;мужскую и&nbsp;женскую целевую аудиторию.
        .template__pic
          img(src="img/t-wiji-other-left@1x.jpg", alt="Банки WIJI вид слева")
      .template__grid
        .template__main-content
          .template__subheading
            h3.template__h3 иллюстрации
            p.template__text Иллюстрации для фирменного стиля выполнялись вручную путём печати с&nbsp;оттиска живых листьев.
        .template__pic
          img(src="img/t-wiji-black@1x.jpg", alt="Упаковка WIJI")
      .template__grid
        .template__main-content
        .template__pic
          img(src="img/t-wiji-process@1x.jpg", alt="PROCESS")
      .template__fullwidth
        img(src="img/t-wiji-illustration@1x.jpg", alt="Иллюстрация WIJI")
      .template__grid.template__grid--links
        .template__main-content
          .template__subheading
            p.template__text проект создан в 2022 году
        a(href="https://wiji-cbd.ru").template__link https://wiji-cbd.ru
      .template__grid.template__grid--arrows
        .template__main-content.template__main-content--footer
          a(href="index.html")
            img(src="img/icon-arrow.svg", atl="Назад", width="52").template__arrow.template__arrow--left
            h4 портфолио
        a(href="#header").template__up
          img(src="img/icon-arrow.svg", atl="Подняться", width="52").template__arrow.template__arrow--top
  include chunk/footer
