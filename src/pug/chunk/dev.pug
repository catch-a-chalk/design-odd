section.dev
  .wrapper
    .dev__container
      h2.title виды веб разработки
      .dev__inbox
        p SEO
        a.btn-arrow(href="#inner3")
          img(src="img/icon-arrow.svg", atl="Спуститься ниже", width="52")
      .dev__block
        each web in WEB
          form.dev__services(id=`form${web.index}` data-index=`${web.index}`)
            fieldset
              p.dev__title=web.title
              p.dev__number=web.number
              p.dev__description=web.description
                br
                span=web.bold
              p.dev__price=web.price
              .dev__order
                label.visually-hidden(class=`dev__label-web-${web.label}` for=`web-${web.label}`)
                input.visually-hidden(type='radio' name='web' id=`web-${web.label}` data-span=web.title value=web.label checked='checked')
                button.btn-black(type="submit" data-cross="true") Заказать
    article.promotion
      p Пакет web+ брендинг/айдентикa
      p скидка 15%
      a.btn-black#myLink(href='branding.html#packages') Добавить
    a.btn-white(href='order.html')
