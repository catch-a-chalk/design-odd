section.projects#projects
  .wrapper
    h2.title наши проекты 2023
    ul.projects__nav(role='tablist')
      each project, index in PROJECTS_NAV
        li(role="presentation")
          - const isSelected = index === 0
          a(href=`#${project.id}` role="tab" id=`${project.id}-tab`,
            aria-selected=String(isSelected), tabindex=isSelected ? undefined : -1)=project.text
    each projects, id in PROJECTS
      div.projects__list(role="tabpanel", id=id, aria-labelledby=`${id}-tab`
      tabindex=-1, hidden=id !== PROJECTS_IDs[0])
        each project in projects
          article.projects__card
            a(href=project.href).projects__cta
              img(src=`img/${project.img}@1x.jpg`, atl="Логотип", width="300")
              h3=project.title
