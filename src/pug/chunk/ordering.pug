article.ordering
  .wrapper
    h2.title
      | Давайте обсудим детали! 
      br 
      | Сделайте первый шаг
    form.ordering__form(action='https://echo.htmlacademy.ru/' method='post')
      .ordering__info
        p
          label(for='form-name') Имя*:
          input#form-name.ordering__required(type='text' name='form-name' required='' autocomplete='name')
        p
          label(for='form-company') Название компании*:
          input#form-company.ordering__required(type='text' name='form-company' required='' autocomplete='company')
        p
          label(for='form-email') E-mail*:
          input#form-email.ordering__required(type='email' name='form-email' required='' autocomplete='email')
        p
          label(for='form-tel') Телефон*:
          input#form-tel.ordering__required(inputmode='decimal' pattern='\+7\-[0-9]{3}\-[0-9]{3}\-[0-9]{2}\-[0-9]{2}' type='tel' name='form-tel' required='' autocomplete='tel' minlength='16')
        p
          label.ordering__file
            span.ordering__file-label Прикрепить файл с информацией:
            input(type='file' multiple accept='image/*,video/*')
            span.btn-black.ordering__file-btn Обзор
            span.ordering__file-text Файл не выбран
        p
          label(for='form-promo') Промокод:
          input#form-promo(type='text' name='form-promo' required='' placeholder='SEEDEX' autocomplete='promo')
      .ordering__details

