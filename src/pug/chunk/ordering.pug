article.ordering
  .wrapper
    h2.title давайте обсудим детали! 
    form.ordering__form(action='https://echo.htmlacademy.ru/' method='post')
      .ordering__info
        p
          label(for='form-name') Имя*:
          input#form-name.ordering__required(type='text' name='form-name' required='' autocomplete='name')
        p
          label(for='form-company') Название компании*:
          input#form-company.ordering__required(type='text' name='form-company' required='' autocomplete='company')
        p
          label(for='form-email') E-mail*:
          input#form-email.ordering__required(type='email' name='form-email' required='' autocomplete='email')
        p
          label(for='form-tel') Телефон*:
          input#form-tel.ordering__required(inputmode='decimal' pattern='\+7\-[0-9]{3}\-[0-9]{3}\-[0-9]{2}\-[0-9]{2}' type='tel' name='form-tel' required='' autocomplete='tel' minlength='16')
      .ordering__promo
        label(for='form-promo') Промокод:
        input#form-promo(type='text' name='form-promo' placeholder='SEEDEX' autocomplete='promo')
      .ordering__file
        label
          span.ordering__file-label Прикрепить файл с информацией:
          input(type='file' multiple accept='image/*,video/*')
          span.btn-black.btn-black--review.ordering__file-btn
          span.ordering__file-text Файл не выбран
      .ordering__details
        h3 Выбранные позиции: 6
        .ordering__container
          ul
            each position in POSITIONS
              li
                button(type='button')
                  .ordering__cross
                span=position.type
      .ordering__about
        label(for='form-text') Кратко о проекте и бюджете*:
        textarea#form-text(required='')
      .ordering__discount
        p Ваша скидка: 
        p 15%
      .ordering__buttons
        label(for='form-subscribe')
          input#form-subscribe.visually-hidden(checked='checked' type='checkbox' value='checked')
          span
          small Подписаться на рассылку
        label(for='form-personal')
          input#form-personal.visually-hidden(checked='checked' type='checkbox' value='checked' required='')
          span
          small
              | Согласен на обработку
              br
              strong персональных данных
        button.btn-black.btn-black--send(type='submit')
    h2.title контакты
    ul.ordering__contacts
      each contact in CONTACTS
        li.ordering__item
          p=contact.label
          a(href=contact.href)=contact.text
    picture
      source(type='image/webp' media='(max-width: 767px)' srcset='img/trouble-mobile@1x.webp, img/trouble-mobile@2x.webp 2x')
      source(type='image/png' media='(max-width: 767px)' srcset='img/trouble-mobile@1x.png, img/trouble-mobile@2x.png 2x')
      source(type='image/webp' media='(max-width: 1439px)' srcset='img/trouble-tablet@1x.webp, img/trouble-tablet@2x.webp 2x')
      source(type='image/png' media='(max-width: 1439px)' srcset='img/trouble-tablet@1x.png, img/trouble-tablet@2x.png 2x')
      source(type='image/webp' srcset='img/trouble-desktop@1x.webp, img/trouble-desktop@2x.webp 2x')
      // 1х: 1440px; 2x: 2880px
      img(src='img/trouble-desktop@1x.png' srcset='img/trouble-desktop@2x.png 2x' alt='Логотип Trouble Shooters' width='1440' height='396')
