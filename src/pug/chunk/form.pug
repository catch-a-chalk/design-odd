section.form
  .wrapper
    .form__intro
      h2.title этапы разработки
      button.btn-arrow(type="button")
        svg(xmlns='http://www.w3.org/2000/svg' width='52' height='60' fill='none')
          path(fill='#000' d='M29.5 4a3.5 3.5 0 1 0-7 0h7Zm-5.975 54.475a3.5 3.5 0 0 0 4.95 0L50.749 36.2a3.5 3.5 0 1 0-4.95-4.95L26 51.051 6.201 31.25a3.5 3.5 0 1 0-4.95 4.95l22.274 22.274ZM22.5 4v52h7V4h-7Z')
    form(action='https://echo.htmlacademy.ru/' method='post')
      .form__stage
        h3.title брендинг
        small создание твердой платформы бренда при помощи определения характеристик 
          | будущего бренда, таких как: ценности, целевая аудитория, миссия и&nbsp;философия, 
          | позиционирование, тон голоса бренда и&nbsp;стиль визуальной коммуникации, сервис 
          | и&nbsp;опыт взаимодействия потребителя с&nbsp;брендом.
      fieldset
        h4 вид разработки
        .form__list 
          each development in DEVELOPMENTS
            label(class=`form__label-${development.value}` for=`development-${development.value}`)
              input.form__input(type='checkbox' name='development' id=`development-${development.value}` value=development.value)
              span.form__option
              =development.span
              span.form__tooltip
      fieldset
        h4 исследование
        .form__list 
          each research in RESEARCHES
            label(class=`form__label-${research.value}` for=`research-${research.value}`)
              input.form__input(type='checkbox' name='research' id=`research-${research.value}` value=research.value)
              span.form__option
              =research.span
              span.form__tooltip
      fieldset
        h4 анализ и теория
        .form__list 
          each analysis in ANALYZES
            label(class=`form__label-${analysis.value}` for=`analysis-${analysis.value}`)
              input.form__input(type='checkbox' name='analysis' id=`analysis-${analysis.value}` value=analysis.value)
              span.form__option
              =analysis.span
              span.form__tooltip
      .form__stage
        h3.title айдентика
        small набор выдержанных в&nbsp;едином стиле и&nbsp;концепции визуальных и&nbsp;прочих элементов, 
          | которые формируют образ и&nbsp;восприятие бренда.
      fieldset
        h4 логотип
        .form__list 
          each logotype in LOGOTYPES
            label(class=`form__label-${logotype.value}` for=`logotype-${logotype.value}`)
              input.form__input(type='checkbox' name='logotype' id=`logotype-${logotype.value}` value=logotype.value)
              span.form__option
              =logotype.span
              span.form__tooltip
      fieldset
        h4 фирменный стиль
        .form__list 
          each style in STYLES
            label(class=`form__label-${style.value}` for=`style-${style.value}`)
              input.form__input(type='checkbox' name='style' id=`style-${style.value}` value=style.value)
              span.form__option
              =style.span
              span.form__tooltip
      fieldset
        h4 разработка формы/дизайна упаковки
        .form__list 
          each package in PACKAGING
            label(class=`form__label-${package.value}` for=`package-${package.value}`)
              input.form__input(type='checkbox' name='package' id=`package-${package.value}` value=package.value)
              span.form__option
              =package.span
              span.form__tooltip
      fieldset
        h4 разработка дизайна этикеток
        .form__list 
          each label in LABELS
            label(class=`form__label-${label.value}` for=`label-${label.value}`)
              input.form__input(type='checkbox' name='label' id=`label-${label.value}` value=label.value)
              span.form__option
              =label.span
              span.form__tooltip
      fieldset
        h4 визуализация на носителях
        .form__list 
          each visualization in VISUALIZATION
            label(class=`form__label-${visualization.value}` for=`visualization-${visualization.value}`)
              input.form__input(type='checkbox' name='visualization' id=`visualization-${visualization.value}` value=visualization.value)
              span.form__option
              =visualization.span
              span.form__tooltip
      fieldset
        h4 инструкции
        .form__list 
          each instruction in INSTRUCTIONS
            label(class=`form__label-${instruction.value}` for=`instruction-${instruction.value}`)
              input.form__input(type='checkbox' name='instruction' id=`instruction-${instruction.value}` value=instruction.value)
              span.form__option
              =instruction.span
              span.form__tooltip
      .form__stage
        h3.title дополнительные услуги
        small 
