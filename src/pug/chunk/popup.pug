-
  const ACTIONS = [
    {
      href: 'order.html',
      text: 'отправить заявку',
      svg: ''
    },
    {
      href: 'tel:+74951656009',
      text: 'заказать звонок',
      svg: ''
    },
    {
      href: '#call-me',
      text: 'напишите нам',
      svg: ''
    }
  ]

.popup
  .popup__window
    .popup__meet
      each action in ACTIONS
        a(href=action.href)
          span=action.text
    form.popup__form#popupForm(action='https://echo.htmlacademy.ru/' method='post')
      p
        label(for='popup-name') Ваше имя:
        input#popup-name(type='text' name='popup-name' required='' autocomplete='name')
      p
        label(for='popup-tel') Телефон:
        input#popup-tel(inputmode='decimal' pattern='\+7\-[0-9]{3}\-[0-9]{3}\-[0-9]{2}\-[0-9]{2}' type='tel' name='popup-tel' required='' autocomplete='tel' minlength='12')
      p
        label(for='popup-email') E-mail:
        input#popup-email(type='email' name='popup-email' required='' autocomplete='email')
      label.popup__personal(for='popup-personal')
        input#popup-personal.visually-hidden(checked='checked' type='checkbox' value='checked' required='')
        span
        small
            | Согласен на обработку
            br
            | персональных данных
      button(type="submit") отправить
    .popup__success
      svg
      p отправлено
    .popup__failed
      svg
      p попробуйте
      | еще раз
  button.popup__btn(type='button')
